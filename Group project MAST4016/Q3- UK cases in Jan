dates_2021 = [datetime.strptime(date, "%d-%m-%Y") for date in dates_2021]
dates_2022 = [datetime.strptime(date, "%d-%m-%Y") for date in dates_2022]
dates_2023 = [datetime.strptime(date, "%d-%m-%Y") for date in dates_2023]

plt.figure(figsize=(10, 6))

plt.plot(range(31), daily_cases_2021[-31:], label='2021')
plt.plot(range(31), daily_cases_2022[-31:], label='2022')
plt.plot(range(31), daily_cases_2023[-31:], label='2023')

plt.title('Confirmed Covid cases for January in the UK')
plt.xlabel('Days of January')
plt.ylabel('Cases')
plt.legend()
plt.grid(True)

plt.tight_layout()
